.header
  .header__inner
    .wrapper
      %h1.wrapper__logo
        = link_to "#", class: "wrapper__logo__furima" do
          = image_tag "/assets/material/logo/logo.png", class: "stylist-image1"
      .wrapper__search-box
        %form.wrapper__search-box__form
          %input{type: 'text', class: 'form-text', placeholder: "キーワードから探す"}
          %button{type: 'submit', class: 'form-submit'}
            .form-submit__logo
              = image_tag "/assets/material/icon/icon-search 1.png", class: "stylist-image2"
    .navigation
      %ul.list-left
        %li.list-left__item
          = link_to "#", class: "list-left__item__kategori" do
            カテゴリー
        %li.list-left__item__btn
          = link_to "#", class: "burand" do
            ブランド
      %ul.list-right
        %li.list-right__item
          = link_to new_user_session_path, class: "list-right__item__btn" do
            ログイン
        %li.list-right__item
          = link_to new_user_registration_path, class: "list-right__item__btn" do
            新規会員登録
