          %input{type: 'text', class: 'form-text', placeholder: "キーワードから探す"}
          %button{type: 'submit', class: 'form-submit'}
            .form-submit__logo
              %img#stylist-image2{src: "/assets/material/icon/icon-search 1.png"}/
