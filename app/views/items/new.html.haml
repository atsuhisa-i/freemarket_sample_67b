      .item__days__to__ship
        %label.item__days__to__ship__label
          発送までの日数
        %span.required
          必須
      %select{id: 'days__to__ship'}
        %option{value: '1'}
          選択してください
        %option{value: '2'}
          1~2日で発送
        %option{value: '3'}
          2~3日で発送
        %option{value: '4'}
