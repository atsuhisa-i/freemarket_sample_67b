.item__sell__header__logo
  = link_to root_path do
    = image_tag "/assets/material/logo/logo.png", class: "furima__logo"

.item__input
  .item__sell__form1
    .form__frame
      .item__picture
        %label.item__picture__label
          出品画像
        %span.required
          必須
      %p.picture__upper__limit
        最大10枚までアップロードできます
      .files__content
        %label
          .files__content__form
            %input{type: 'file', accept: 'image/png,image/jpeg', multiple: 'multiple', class: 'file__upload'}
              = icon("fa", "camera")
              %p.how__to__upload
                ドラッグアンドドロップ
                %br
                またはクリックしてファイルをアップロード
  %hr.style__line

  .item__sell__form2
    .form__frame
      .item__name
        %label.item__name__label 
          商品名
        %span.required
          必須
      %input{type: 'text', id: 'name', placeholder: "40文字まで"}
      .item__explanation
        %label.item__explanation__label
          商品説明
        %span.required
          必須
      %textarea{id: 'explanation', placeholder: "商品の説明（必須 1,000文字以内）\n（色、素材、重さ、定価、注意点など）\n\n例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"}
  %hr.style__line

  .item__sell__form3
    .form__frame
      .item__detail
        商品の詳細
      .item__category
        %label.item__category__label
          カテゴリー
        %span.required
          必須
      %select{id: 'category'}
        %option{value: '1'}
          選択してください
      .item__size
        %label.item__size__label
          サイズ
        %span.required
          必須
      %select{id: 'size'}
        %option{value: '1'}
          選択してください
        %option{value: '2'}
          XXS以下
        %option{value: '3'}
          XS(SS)
        %option{value: '4'}
          S
        %option{value: '5'}
          M
        %option{value: '6'}
          L
        %option{value: '7'}
          XL(LL)
        %option{value: '8'}
          2XL(3L)
        %option{value: '9'}
          3XL(4L)
        %option{value: '10'}
          4XL(5L)以上
        %option{value: '11'}
          FREE SIZE
      .item__brand
        %label.item__brand__label
          ブランド
        %span.no-required
          任意
      %input{type: 'text', id: 'brand', placeholder: "例）シャネル"}
      .item__condition
        %label.item__condition__label
          商品の状態
        %span.required
          必須
      %select{id: 'condition'}
        %option{value: '1'}
          選択してください
        %option{value: '2'}
          新品、未使用
        %option{value: '3'}
          未使用に近い
        %option{value: '4'}
          目立った傷や汚れなし
        %option{value: '5'}
          やや傷や汚れあり
        %option{value: '6'}
          傷や汚れあり
        %option{value: '7'}
          全体的に状態が悪い
  %hr.style__line

