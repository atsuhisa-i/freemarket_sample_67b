    %li.content
      %h2.content__head
        FURIMAについて
      %ul.content__list
        %li.content__list__text
          = link_to "#", class: "text" do
            会社概要（運営会社）
        %li.content__list__text
          = link_to "#", class: "text" do
            プライバシーポリシー
        %li.content__list__text
          = link_to "#", class: "text" do
            FURIMA利用規約
        %li.content__list__text
          = link_to "#", class: "text" do
            ポイントに関する特約
    %li.content
      %h2.content__head
        FURIMAを見る
      %ul.content__list
        %li.content__list__text
          = link_to "#", class: "text" do
            カテゴリー一覧
        %li.content__list__text
          = link_to "#", class: "text" do
            ブランド一覧
    %li.content
      %h2.content__head
        ヘルプ＆ガイド
      %ul.content__list
        %li.content__list__text
          = link_to "#", class: "text" do
            FURIMAガイド
        %li.content__list__text
          = link_to "#", class: "text" do
            FURIMAロゴ利用ガイドライン
        %li.content__list__text
          = link_to "#", class: "text" do
            お知らせ
  .foter__logo
    = link_to "#", class: "furima-logo" do
      = image_tag "material/logo/logo-white.png", class: "img"
    %p
      © FURIMA
